{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "outDir": "../../dist/out-tsc",
    "types": [
      "vitest",
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node"
    ]
  },
  "include": [
    "vite.config.unit.ts",
    "vite.config.integration.ts",
    "mocks/**/*.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.test.js",
    "src/**/*.test.jsx",
    "src/**/*.d.ts"
  ]
}
