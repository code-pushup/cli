{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "plugins": [
      {
        "transform": "../../tools/zod2md-jsdocs/dist",
        "afterDeclarations": true,
        "baseUrl": "https://github.com/code-pushup/cli/blob/main/packages/models/docs/models-reference.md"
      }
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "**/*.tsbuildinfo"
  ],
  "references": [
    {
      "path": "../../testing/test-setup-config/tsconfig.lib.json"
    }
  ]
}
