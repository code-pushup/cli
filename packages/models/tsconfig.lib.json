{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "plugins": [
      {
        "transform": "./packages/models/transformers/dist",
        "afterDeclarations": true
      }
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "vitest.unit.config.ts",
    "vitest.int.config.ts",
    "code-pushup.config.ts",
    "zod2md.config.ts",
    "src/**/*.test.ts",
    "src/**/*.mock.ts",
    "mocks/**/*.ts",
    "tools/**/*.ts"
  ]
}
