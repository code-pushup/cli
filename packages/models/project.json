{
  "name": "models",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/models/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/models",
        "main": "packages/models/src/index.ts",
        "tsConfig": "packages/models/tsconfig.lib.json",
        "assets": ["packages/models/*.md"],
        "esbuildConfig": "esbuild.config.js"
      }
    },
    "version": { "postTargets": ["models:github"] },
    "github": {
      "options": {
        "notesFile": "./packages/models/CHANGELOG.md"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs models {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/models/**/*.ts",
          "packages/models/package.json"
        ]
      }
    },
    "unit-test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/models/unit-tests"
      }
    },
    "integration-test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/models/integration-tests"
      }
    }
  },
  "tags": ["scope:shared", "type:util"]
}
