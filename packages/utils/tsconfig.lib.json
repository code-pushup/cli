{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "paths": {
      "@code-pushup/models": ["../models/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "**/*.tsbuildinfo"
  ],
  "references": [
    {
      "path": "../../testing/test-setup-config/tsconfig.lib.json"
    },
    {
      "path": "../../testing/test-fixtures/tsconfig.lib.json"
    },
    {
      "path": "../../testing/test-utils/tsconfig.lib.json"
    },
    {
      "path": "../models/tsconfig.lib.json"
    }
  ]
}
