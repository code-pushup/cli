{
  "name": "utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/utils",
        "main": "packages/utils/src/index.ts",
        "tsConfig": "packages/utils/tsconfig.lib.json",
        "assets": ["packages/utils/*.md"],
        "esbuildConfig": "esbuild.config.js"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "run": {
      "command": "npx ./dist/packages/utils run --configPath=./packages/cli-utils/src/lib/read-config.mock.cjs"
    },
    "run-node": {
      "command": "node ./dist/packages/utils/src/bin.js run --configPath=./cpu-config.mock.mjs"
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs cli-utils {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/utils/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": [
    "scope:utils",
    "type:app"
  ]
}
