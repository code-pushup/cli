{
  "name": "utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils/src",
  "projectType": "library",
  "targets": {
    "build": {},
    "lint": {},
    "lint-report": {},
    "perf": {
      "command": "npx tsx --tsconfig=../tsconfig.perf.json",
      "options": {
        "cwd": "./packages/utils/perf"
      }
    },
    "perf:list": {
      "command": "ls -l | grep \"^d\" | awk '{print $9}'",
      "options": {
        "cwd": "./packages/utils/perf"
      }
    },
    "unit-test": {},
    "int-test": {},
    "demo-logger": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx --tsconfig=tsconfig.base.json packages/utils/mocks/logger-demo.ts"
      },
      "configurations": {
        "ci": {
          "env": {
            "CI": "true"
          }
        },
        "verbose": {
          "args": ["--verbose"]
        },
        "error-config": {
          "args": ["--error=config"]
        },
        "error-plugin": {
          "args": ["--error=plugin"]
        },
        "error-upload": {
          "args": ["--error=upload"]
        }
      }
    }
  },
  "tags": ["scope:shared", "type:util", "publishable"]
}
