{
  "name": "nx-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx-plugin/src",
  "projectType": "library",
  "implicitDependencies": ["cli"],
  "targets": {
    "pre-build": {
      "executor": "nx:run-commands",
      "dependsOn": ["zod-to-nx-schema:build"],
      "options": {
        "command": "node",
        "args": [
          "tools/zod-to-nx-schema/dist/src/bin.js",
          "packages/nx-plugin/src/executors/cli/schema.ts",
          "packages/nx-plugin/src/executors/cli/schema.json",
          "--export-name",
          "AutorunExecutorOptions",
          "--title",
          "CodePushup CLI autorun executor",
          "--description",
          "Executes the @code-pushup/cli autorun command. See: https://github.com/code-pushup/cli/blob/main/packages/cli/README.md#autorun-command"
        ],
        "env": {
          "NODE_OPTIONS": "--import tsx",
          "TSX_TSCONFIG_PATH": "tsconfig.base.json"
        }
      }
    },
    "build": {
      "dependsOn": ["pre-build"],
      "options": {
        "assets": [
          "{projectRoot}/*.md",
          {
            "input": "./packages/nx-plugin/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/nx-plugin/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/nx-plugin",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/nx-plugin",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "options": {
        "lintFilePatterns": [
          "packages/nx-plugin/**/*.ts",
          "packages/nx-plugin/package.json",
          "packages/nx-plugin/generators.json"
        ]
      }
    },
    "lint-report": {
      "options": {
        "lintFilePatterns": [
          "packages/nx-plugin/**/*.ts",
          "packages/nx-plugin/package.json",
          "packages/nx-plugin/generators.json"
        ]
      }
    },
    "unit-test": {},
    "int-test": {},
    "code-pushup": {},
    "code-pushup-eslint": {},
    "code-pushup-coverage": {},
    "code-pushup-typescript": {},
    "code-pushup-jsdocs": {}
  },
  "tags": ["scope:tooling", "type:feature", "publishable"]
}
