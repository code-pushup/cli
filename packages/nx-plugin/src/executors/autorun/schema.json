{
  "$ref": "#/definitions/CoreConfig",
  "definitions": {
    "persistOptions": {
      "type": "object",
      "properties": {
        "outputDir": {
          "type": "string",
          "minLength": 1,
          "description": "Artifacts folder"
        },
        "filename": {
          "type": "string",
          "pattern": "^(?!.*[ \\\\/:*?\"<>|]).+$",
          "minLength": 1,
          "description": "Artifacts file name (without extension)"
        },
        "format": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "json",
              "md"
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "uploadOptions": {
      "type": "object",
      "properties": {
        "server": {
          "type": "string",
          "format": "uri",
          "description": "URL of deployed portal API"
        },
        "apiKey": {
          "type": "string",
          "description": "API key with write access to portal (use `process.env` for security)"
        },
        "organization": {
          "type": "string",
          "pattern": "^[a-z\\d]+(?:-[a-z\\d]+)*$",
          "maxLength": 128,
          "description": "Organization slug from Code PushUp portal"
        },
        "project": {
          "type": "string",
          "pattern": "^[a-z\\d]+(?:-[a-z\\d]+)*$",
          "maxLength": 128,
          "description": "Project slug from Code PushUp portal"
        },
        "timeout": {
          "type": "integer",
          "exclusiveMinimum": 0,
          "description": "Request timeout in minutes (default is 5)"
        }
      },
      "required": [
        "server",
        "apiKey",
        "organization",
        "project"
      ],
      "additionalProperties": false
    },
    "CoreConfig": {
      "type": "object",
      "properties": {
        "progress": {
          "type": "boolean",
          "description": "show progress"
        },
        "verbose": {
          "type": "boolean",
          "description": "additional information"
        },
        "projectPrefix": {
          "type": "string",
          "description": "Prefix the project name under upload configuration. A '-' is appended automatically E.g. 'cp' => 'cp-<project>'"
        },
        "dryRun": {
          "type": "boolean",
          "description": "Don't execute, just print the produced command"
        },
        "persist": {
          "$ref": "#/definitions/persistOptions"
        },
        "upload": {
          "$ref": "#/definitions/uploadOptions"
        }
      },
      "additionalProperties": true
    }
  },
  "$schema": "http://json-schema.org/schema"
}
