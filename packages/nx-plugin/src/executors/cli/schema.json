{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "additionalProperties": true,
  "$id": "AutorunExecutorOptions",
  "title": "CodePushup CLI autorun executor",
  "description": "Executes the @code-pushup/cli autorun command. See: https://github.com/code-pushup/cli/blob/main/packages/cli/README.md#autorun-command",
  "properties": {
    "command": {
      "type": "string",
      "enum": [
        "collect",
        "upload",
        "autorun",
        "print-config",
        "compare",
        "merge-diffs"
      ],
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "dryRun": {
      "type": "boolean"
    },
    "bin": {
      "type": "string"
    },
    "projectPrefix": {
      "type": "string"
    },
    "output": {
      "type": "string"
    },
    "verbose": {
      "type": "boolean"
    },
    "progress": {
      "type": "boolean"
    },
    "onlyPlugins": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "config": {
      "type": "string"
    },
    "persist": {
      "type": "object",
      "properties": {
        "outputDir": {
          "type": "string",
          "minLength": 1
        },
        "filename": {
          "type": "string",
          "minLength": 1,
          "pattern": "^(?!.*[ \\\\/:*?\"<>|]).+$"
        },
        "format": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["json", "md"]
          }
        },
        "skipReports": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "upload": {
      "type": "object",
      "properties": {
        "server": {
          "type": "string",
          "format": "uri"
        },
        "apiKey": {
          "type": "string"
        },
        "organization": {
          "type": "string",
          "maxLength": 128,
          "pattern": "^[a-z\\d]+(?:-[a-z\\d]+)*$"
        },
        "project": {
          "type": "string",
          "maxLength": 128,
          "pattern": "^[a-z\\d]+(?:-[a-z\\d]+)*$"
        },
        "timeout": {
          "type": "integer",
          "exclusiveMinimum": 0,
          "maximum": 9007199254740991
        }
      },
      "additionalProperties": false
    }
  }
}
