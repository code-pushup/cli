{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", "*.config*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["packages/create-cli/tsconfig.*?.json"]
      },
      "rules": {}
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": [
          "error",
          {
            "ignoredDependencies": ["@code-pushup/nx-plugin"] // nx-plugin is run via CLI
          }
        ]
      }
    }
  ]
}
