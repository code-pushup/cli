{
  "name": "plugin-lighthouse",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/plugin-lighthouse/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/plugin-lighthouse",
        "main": "packages/plugin-lighthouse/src/index.ts",
        "tsConfig": "packages/plugin-lighthouse/tsconfig.lib.json",
        "assets": ["packages/plugin-lighthouse/*.md"],
        "esbuildConfig": "esbuild.config.js"
      }
    },
    "version": { "postTargets": ["plugin-lighthouse:github"] },
    "github": {
      "options": {
        "notesFile": "./packages/plugin-lighthouse/CHANGELOG.md"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/plugin-lighthouse/**/*.ts",
          "packages/plugin-lighthouse/package.json"
        ]
      }
    },
    "unit-test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/plugin-lighthouse"],
      "options": {
        "reportsDirectory": "../../coverage/packages/plugin-lighthouse/unit"
      }
    },
    "integration-test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/plugin-lighthouse"],
      "options": {
        "reportsDirectory": "../../coverage/packages/plugin-lighthouse/integration"
      }
    }
  },
  "tags": ["scope:plugin", "type:feature"]
}
