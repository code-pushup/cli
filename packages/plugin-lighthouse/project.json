{
  "name": "plugin-lighthouse",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/plugin-lighthouse/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@quality-metrics/nx-plugin:tsup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/plugin-lighthouse",
        "main": "packages/plugin-lighthouse/src/index.ts",
        "tsConfig": "packages/plugin-lighthouse/tsconfig.lib.json",
        "project": "packages/plugin-lighthouse/package.json",
        "format": ["esm"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/plugin-lighthouse/**/*.ts",
          "packages/plugin-lighthouse/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/plugin-lighthouse"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/plugin-lighthouse"
      }
    }
  },
  "tags": []
}
