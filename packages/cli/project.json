{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/cli",
        "main": "packages/cli/src/index.ts",
        "tsConfig": "packages/cli/tsconfig.lib.json",
        "assets": ["packages/cli/*.md"],
        "esbuildConfig": "esbuild.config.js"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs cli {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "exec": {
      "command": "npx dist/packages/cli --config=./packages/cli/code-pushup.config.ts",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/cli/**/*.ts",
          "packages/cli/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/cli"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/cli"
      }
    }
  },
  "tags": ["scope:core", "type:app"]
}
