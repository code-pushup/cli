{
  "name": "plugin-bundle-stats",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/plugin-bundle-stats/src",
  "projectType": "library",
  "targets": {
    "code-pushup-minimal-angular": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node packages/cli/src/index.ts --no-progress --verbose",
        "args": "collect --config packages/plugin-bundle-stats/code-pushup.minimal-angular.config.ts",
        "env": {
          "NODE_OPTIONS": "--import tsx",
          "TSX_TSCONFIG_PATH": "tsconfig.base.json"
        }
      }
    },
    "code-pushup-large-angular": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node packages/cli/src/index.ts --no-progress --verbose",
        "args": "collect --config packages/plugin-bundle-stats/code-pushup.large-angular.config.ts",
        "env": {
          "NODE_OPTIONS": "--import tsx",
          "TSX_TSCONFIG_PATH": "tsconfig.base.json"
        }
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/plugin-bundle-stats",
        "main": "packages/plugin-bundle-stats/src/index.ts",
        "tsConfig": "packages/plugin-bundle-stats/tsconfig.lib.json",
        "assets": ["packages/plugin-bundle-stats/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/plugin-bundle-stats/**/*.ts",
          "packages/plugin-bundle-stats/package.json"
        ]
      }
    },
    "unit-test": {
      "executor": "@nx/vite:test",
      "options": {
        "configFile": "packages/plugin-bundle-stats/vite.config.unit.ts"
      }
    },
    "integration-test": {
      "executor": "@nx/vite:test",
      "options": {
        "configFile": "packages/plugin-bundle-stats/vite.config.integration.ts"
      }
    }
  },
  "tags": ["scope:plugin", "type:feature", "publishable"]
}
