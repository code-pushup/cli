{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", "code-pushup.config.ts"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["examples/plugins/tsconfig.*?.json"]
      },
      "rules": {}
    },
    {
      "files": ["*.test.ts", "*.test.tsx", "*.generated.ts", "*.generated.tsx"],
      "parserOptions": {
        "project": ["examples/plugins/tsconfig.*?.json"]
      },
      "rules": {
        "no-magic-numbers": "off",
        "max-lines": "off"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": ["error"]
      }
    }
  ]
}
