{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", "*.config*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["examples/plugins/tsconfig.*?.json"]
      }
    },
    {
      "files": ["*.test.ts"],
      "parserOptions": {
        "project": ["examples/plugins/tsconfig.*?.json"]
      },
      "rules": {
        "no-magic-numbers": "off",
        "max-lines": "off"
      }
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": ["error"]
      }
    }
  ]
}
