{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "paths": {
      "@code-pushup/models": ["../../packages/models/dist/index.d.ts"],
      "@code-pushup/test-utils": ["../test-utils/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/lib/fixtures/configs/**/*",
    "**/*.tsbuildinfo"
  ],
  "references": [
    {
      "path": "../test-utils/tsconfig.lib.json"
    },
    {
      "path": "../../packages/models/tsconfig.lib.json"
    }
  ]
}
