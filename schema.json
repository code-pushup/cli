{
  "$ref": "#/definitions/CoreConfig",
  "definitions": {
    "globalOptions": {
      "type": "object",
      "properties": {
        "progress": {
          "type": "boolean",
          "description": "show progress"
        },
        "verbose": {
          "type": "boolean",
          "description": "additional information"
        }
      },
      "additionalProperties": false
    },
    "persistOptions": {
      "type": "object",
      "properties": {
        "outputDir": {
          "type": "string",
          "minLength": 1,
          "description": "Artifacts folder"
        },
        "filename": {
          "type": "string",
          "pattern": "^(?!.*[ \\\\/:*?\"<>|]).+$",
          "minLength": 1,
          "description": "Artifacts file name (without extension)"
        },
        "format": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["json", "md"]
          }
        }
      },
      "additionalProperties": false
    },
    "uploadOptions": {
      "type": "object",
      "properties": {
        "server": {
          "type": "string",
          "format": "uri",
          "description": "URL of deployed portal API"
        },
        "apiKey": {
          "type": "string",
          "description": "API key with write access to portal (use `process.env` for security)"
        },
        "organization": {
          "type": "string",
          "pattern": "^[a-z\\d]+(?:-[a-z\\d]+)*$",
          "maxLength": 128,
          "description": "Organization slug from Code PushUp portal"
        },
        "project": {
          "type": "string",
          "pattern": "^[a-z\\d]+(?:-[a-z\\d]+)*$",
          "maxLength": 128,
          "description": "Project slug from Code PushUp portal"
        },
        "timeout": {
          "type": "integer",
          "exclusiveMinimum": 0,
          "description": "Request timeout in minutes (default is 5)"
        }
      },
      "required": ["server", "apiKey", "organization", "project"],
      "additionalProperties": false
    },
    "CoreConfig": {
      "type": "object",
      "properties": {
        "plugins": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "packageName": {
                "type": "string",
                "description": "NPM package name"
              },
              "version": {
                "type": "string",
                "description": "NPM version of the package"
              },
              "title": {
                "type": "string",
                "maxLength": 256,
                "description": "Descriptive name"
              },
              "description": {
                "type": "string",
                "maxLength": 65536,
                "description": "Description (markdown)"
              },
              "docsUrl": {
                "anyOf": [
                  {
                    "anyOf": [
                      {
                        "not": {}
                      },
                      {
                        "type": "string",
                        "format": "uri"
                      }
                    ]
